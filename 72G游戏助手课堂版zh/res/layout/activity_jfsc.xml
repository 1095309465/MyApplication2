<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/fragment4_image1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_back_normal" />

        <TextView
            android:id="@+id/fragment4_ed1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="积分商城"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/yhye"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                
                android:textSize="15sp"
                android:text="用户余额" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:gravity="center"
                android:text="请登录"
                android:onClick="btn"
                android:textSize="15sp"
                android:textColor="#ff3f82c0" />
        </LinearLayout>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/fragment1_lin2"
        android:gravity="center" 
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/fragment1_tv1_selector"
            android:gravity="center"
            android:text="最新奖品"
            android:checked="true"
            android:button="@null"
             android:textColor="@color/btntv_bule_check_sector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/fragment1_tv2_selector"
            android:gravity="center"
            android:text="最热奖品"
            android:button="@null"
            android:textColor="@color/btntv_bule_check_sector"
            android:textSize="15sp" />
        
        
    </RadioGroup>

         

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>