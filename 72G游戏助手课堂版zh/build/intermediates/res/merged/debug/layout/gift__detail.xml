<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lbxq_lin1_image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/lbxq_lin1_image1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:gravity="center"
            android:text="礼包详情"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/lbxq_lin1_image2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/lbxq_lin1_image2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_giftdetail_head"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" >

            <com.example.custom.XCRoundImageView
                android:scaleType="fitXY"
                android:id="@+id/icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_launcher" />
          <!--   <com.example.UtilsTools.CircleImageViewB 
                 android:id="@+id/icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                /> -->

            <TextView
                android:id="@+id/consume"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lbxq_qb_shape"
                android:gravity="center"
                android:text="3.00Q币"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="《太极熊猫》"
                android:textColor="#FFFFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="剩余量:"
                    android:textColor="#FFFFFFFF" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/layerlist_progressbar"
                    />

                <TextView
                    android:id="@+id/lbxq_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/80"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/lbxq_rq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="有效期"
                android:textColor="#FFFFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbxq_syy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="适用于:  "
                    android:textColor="#FFFFFFFF" />

                <ImageView
                    android:id="@+id/lbxq_android"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_android" />

                <ImageView
                    android:id="@+id/lbxq_ios"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_ios" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffe2e3e5"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/game_type"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="类型：角色扮演" />

        <TextView
            android:id="@+id/size"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/game_type"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="大小：167M" />

        <Button
            android:id="@+id/lbxq_lin_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lb_xq_btn_secltor"
            android:onClick="btn"
            android:text="下载游戏"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbxq_lin4_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="礼包内容"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="200钻石"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="领取方式"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/howget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="进入游戏。。。。。。。。。"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/lb_xq_btn_secltor"
        android:text="立即领取" />

</LinearLayout>